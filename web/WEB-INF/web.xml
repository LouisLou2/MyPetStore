        <url-pattern>/shop/view/order</url-pattern>
    </servlet-mapping>

    <!--更改地址-->
    <servlet>
        <servlet-name>ShippingAddressServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.ShippingAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShippingAddressServlet</servlet-name>
        <url-pattern>/shop/confirm/shippingAddress</url-pattern>
    </servlet-mapping>

    <!--查看订单列表-->
    <servlet>
        <servlet-name>ViewListOrderServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.ViewListOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewListOrderServlet</servlet-name>
        <url-pattern>/shop/view/listorder</url-pattern>
    </servlet-mapping>
    
    <!--验证码设置-->
    <servlet>
        <servlet-name>VerificationCodeServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.VerifacationCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerificationCodeServlet</servlet-name>
        <url-pattern>/verify/get_img_code</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmailCodeServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.EmailCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailCodeServlet</servlet-name>
        <url-pattern>/verify/get_email_code</url-pattern>
    </servlet-mapping>
    
    <!--参数检验-->
    <servlet>
        <servlet-name>VerifacationServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.VerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifacationServlet</servlet-name>
        <url-pattern>/verify/check</url-pattern>
    </servlet-mapping>
    <!--日志检验-->
    <servlet>
