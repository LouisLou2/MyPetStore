<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!--静态展示页面-->
    <!--
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    -->
    <filter>
        <filter-name>AccountFilter</filter-name>
        <filter-class>org.csu.mypetstore.web.filter.AccountFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccountFilter</filter-name>
        <url-pattern>/account/*</url-pattern> <!-- 可以根据需要修改 URL 模式 -->
    </filter-mapping>

    <filter>
        <filter-name>ShopFilter</filter-name>
        <filter-class>org.csu.mypetstore.web.filter.ShopFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ShopFilter</filter-name>
        <url-pattern>/shop/*</url-pattern> <!-- 可以根据需要修改 URL 模式 -->
    </filter-mapping>
    
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.MainServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    
    <!--配置ViewCategoryServlet-->
    <servlet>
        <servlet-name>ViewCategoryServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.ViewCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCategoryServlet</servlet-name>
        <url-pattern>/shop/view/category</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryInfoServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.restful.CategoryInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CategoryInfoServlet</servlet-name>
        <url-pattern>/rest/shop/view/category</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductInfoServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.restful.ProductInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductInfoServlet</servlet-name>
        <url-pattern>/rest/shop/view/product</url-pattern>
    </servlet-mapping>
    
    
    <!--配置ViewProductServlet-->
    <servlet>
        <servlet-name>ViewProductServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.ViewProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProductServlet</servlet-name>
        <url-pattern>/shop/view/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewItemServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.ViewItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewItemServlet</servlet-name>
        <url-pattern>/shop/view/item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.SearchProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchProductServlet</servlet-name>
        <url-pattern>/shop/search/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/shop/addcart/item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.ViewCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCartServlet</servlet-name>
        <url-pattern>/shop/view/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.RemoveItemFromCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <url-pattern>/shop/removecart/item</url-pattern>
    </servlet-mapping>

    <!--更新购物车数量-->
    <servlet>
        <servlet-name>UpdateCartQuantitiesServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.UpdateCartQuantitiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCartQuantitiesServlet</servlet-name>
        <url-pattern>/shop/update/cartQuantities</url-pattern>
    </servlet-mapping>
    
    <!--登录跳转配置-->
    <servlet>
        <servlet-name>SignInFormServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.SignInFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInFormServlet</servlet-name>
        <url-pattern>/page/account/signin</url-pattern>
    </servlet-mapping>
    
    <!--登录配置-->
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/account/signin</url-pattern>
    </servlet-mapping>
    
    <!--登出账户-->
    <servlet>
        <servlet-name>SignOffServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.SignOffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignOffServlet</servlet-name>
        <url-pattern>/account/signoff</url-pattern>
    </servlet-mapping>
    
    <!--编辑账户信息-->
    <servlet>
        <servlet-name>EditAccountServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.EditAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditAccountServlet</servlet-name>
        <url-pattern>/editAccount</url-pattern>
    </servlet-mapping>

    <!--注册表单-->
    <servlet>
        <servlet-name>RegisterFormServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.RegisterFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterFormServlet</servlet-name>
        <url-pattern>/page/account/register</url-pattern>
    </servlet-mapping>

    <!--注册-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/account/register</url-pattern>
    </servlet-mapping>

    <!--账号信息更改-->
    <servlet>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.UpdateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <url-pattern>/account/update</url-pattern>
    </servlet-mapping>
    
    <!--?跳转-->
    <servlet>
        <servlet-name>JPetStoreDemoServlet</servlet-name>
        <servlet-class>org.csu.mypetstore.web.servlets.JPetStoreDemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JPetStoreDemoServlet</servlet-name>
        <url-pattern>/jPetStoreDemo</url-pattern>
    </servlet-mapping>

    <!--跳1-->
